{% extends '@S2Module/Default/index.html.twig' %}

{% block modules -%}
    <h3>Module</h3>
<div class="video-content general-content container">
    <table class="record_properties table table-bordered table-striped table-hover table-condensed">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td><a href="{{ path('module') }}{{ entity.name | replace(" ","-") }}">{{ entity.name }}</a></td>
            </tr>
            <tr>
                <th>Youtubeid</th>
                <td>{{ entity.youtubeId }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('module') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('module_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
    </div>
{% endblock %}
