{# src/Yoda/UserBundle/Resources/views/Security/login.html.twig #}
{% extends ':default:index.html.twig' %}

{% block login %}
    <h3>Contributor Login</h3>
{% if error %}
    <div class="login-error">{{ error.message }}</div>
{% endif %}

<form action="{{ path('login_check') }}" method="post">
    <ul>
        <li><label for="username">Username:</label><input type="text" id="username" name="_username" value="{{ last_username }}" />
        <li><label for="password">Password:</label>
        <input type="password" id="password" name="_password" /></li>

    {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}

        <li><button type="submit">Login</button></li>
    </ul>
</form>
    {% endblock %}